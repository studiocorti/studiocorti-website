@import 'nib'
@import 'rupture'

// Color Palette
_main = #cf212a

// Font
.sans-font
  font-family 'Open Sans', sans-serif

// Generic
html,
body
  width 100%
  height 100%
  @extends .sans-font
  font-size 1em
  padding 0
  margin 0

_spacer = 5, 10, 20, 40, 50, 60, 80, 100
for _s in _spacer
  .spacer-{ _s }
    height ( _s * 1px )

.padding
  padding 20px
