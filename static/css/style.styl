@import 'nib'
@import 'rupture'

// Color Palette
_main = #009cff
_alternative = #082b82
_text = #8b8b8b

// Font
.sans-font
  font-family 'Hind', sans-serif

// Generic
html,
body
  width 100%
  height 100%
  @extends .sans-font
  font-size 16px
  padding 0
  margin 0
  color _text
  font-weight 300

_spacer = 5, 10, 20, 40, 50, 60, 80, 100
for _s in _spacer
  .spacer-{ _s }
    height ( _s * 1px )

.padding
  padding 20px

.container
  max-width 1000px
  margin auto

.btn
  background _main
  color #FFF
  border none
  border-radius 40px
  padding 7px 15px 4px
  margin 0
  span
    text-transform uppercase
    font-size 0.8rem
    font-weight 600
  &:focus
    box-shadow none
  &:hover
    background lighten(@background, 10%)
  &:active
    background lighten(@background, 14%)
    box-shadow 0 0 4px rgba(#000, 0.3)

ul.list-circle
  list-style-image url('/static/img/list-circle.png')
  padding-left 1rem
  li
    padding-left 0.3rem

ul.tab-list
  li
    color rgba(_text, 0.8)
    border 2px solid transparent
    border-radius 5px
    cursor pointer
    strong
      text-transform uppercase
      font-weight 500
      font-size 0.9rem
      margin-top 5px
    &:hover
      color _text
      border-color rgba(#333, 0.1)
    &.tab-item-active
      color _main
      border-color rgba(#333, 0.1)

h1
  color _text
  font-weight 300
h3
  color _main
  font-weight 600
  font-size 0.8rem
  text-transform uppercase

.page
  &.page-fullscreen
    width 100%
    min-height 100%
  &.page-image
    background-size cover
    background-repeat no-repeat
    background-position center
  &.page-light
    background #F2F2F2

#intro
  color #FFF
  background-color _alternative
  h1
    color #FFF
  p
    font-weight 400

header
  font-size 0.8rem
  ul
    &:hover
      li
        a[data-scroll]
          opacity 0.5
          &:hover
            opacity 1
  a
    color #FFF
    text-transform uppercase
    font-weight 600
    transition all 0.2s ease
    span.block
      padding-top 3px

.hexagon-container
  text-align center
  .separator
    margin-top -25px

  .hexagon
    position relative
    width 170px
    height 98.15px
    background-color #cccccc
    margin 49.07px 0
    display inline-block
    transition background 0.3s ease
    p
      position absolute
      top 50%
      left 10px
      right 10px
      text-align center
      transform translate(0, -50%)
      color #FFF
      text-transform uppercase
      font-size 0.9rem
      font-weight 600
      margin 0
      line-height 1.2em

    & + .hexagon
      margin-left 40px

    &:before,
    &:after
      content ''
      position absolute
      width 0
      border-left 85px solid transparent
      border-right 85px solid transparent
      left 0

    &:before
      bottom 100%
      border-bottom 49.07px solid #cccccc
      transition border-bottom-color 0.3s ease

    &:after
      top 100%
      width 0
      border-top 49.07px solid #cccccc
      transition border-top-color 0.3s ease

    &:hover
      background-color _main
      &:before
        border-bottom-color @background-color
      &:after
        border-top-color @background-color
