@import 'nib'
@import 'rupture'

// Color Palette
_main = #009cff
_alternative = #082b82
_text = #8b8b8b

// Font
.sans-font
  font-family 'Hind', sans-serif

// Generic
html,
body
  width 100%
  height 100%
  @extends .sans-font
  font-size 16px
  padding 0
  margin 0
  color _text
  font-weight 300

_spacer = 5, 10, 20, 40, 50, 60, 80, 100
for _s in _spacer
  .spacer-{ _s }
    height ( _s * 1px )

.padding
  padding 20px

.container
  max-width 1000px
  margin auto

.btn
  background _main
  border none
  border-radius 40px
  text-transform uppercase
  padding-top 9px
  padding-bottom 7px
  &:focus
    box-shadow none
  &:active
    box-shadow 0 0 4px rgba(#000, 0.3)

ul.list-circle
  list-style-image url('/static/img/list-circle.png')
  padding-left 1rem
  li
    padding-left 0.3rem

ul.tab-list
  li
    color rgba(_text, 0.8)
    border 2px solid transparent
    border-radius 5px
    cursor pointer
    strong
      text-transform uppercase
      font-weight 500
      font-size 0.9rem
    &:hover
      color _text
      border-color rgba(#333, 0.1)
    &.active
      color _main
      border-color rgba(#333, 0.1)

h1
  color _text
  font-weight 300
h3
  color _main
  font-weight 600
  font-size 0.8rem
  text-transform uppercase

.page
  &.page-fullscreen
    width 100%
    min-height 100%
  &.page-image
    background-size cover
    background-repeat no-repeat
    background-position center
  &.page-light
    background #F2F2F2

#intro
  color #FFF
  background-color _alternative
  h1
    color #FFF

header
  font-size 0.8rem
  a
    color #FFF
    text-transform uppercase
    font-weight 600
