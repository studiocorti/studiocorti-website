@import 'nib'
@import 'rupture'

rupture.scale = 0 35.5em 48em 64em 80em
rupture.anti-overlap = -0.5px
rupture.scale-names = 'sm' 'md' 'lg' 'xl' 'hd'

// Color Palette
_main = #009cff
_alternative = #082b82
_text = #8b8b8b

// Font
.sans-font
  font-family 'Hind', sans-serif

// Generic
html,
body
  width 100%
  height 100%
  @extends .sans-font
  font-size 16px
  padding 0
  margin 0
  color _text
  font-weight 300

_spacer = 5, 10, 20, 40, 50, 60, 80, 100
for _s in _spacer
  .spacer-{ _s }
    height ( _s * 1px )
    
a.link
  color _main

.padding
  padding 20px

.container
  max-width 1000px
  margin auto

.btn
  background _main
  color #FFF
  border none
  border-radius 40px
  padding 7px 15px 4px
  margin 0
  span
    text-transform uppercase
    font-size 0.8rem
    font-weight 600
  &:focus
    box-shadow none
  &:hover
    background lighten(@background, 10%)
  &:active
    background lighten(@background, 14%)
    box-shadow 0 0 4px rgba(#000, 0.3)

ul.list-circle
  list-style-image url('/static/img/list-circle.png')
  padding-left 1rem
  li
    padding-left 0.3rem

ul.tab-list
  li
    color rgba(_text, 0.8)
    border 2px solid transparent
    border-radius 5px
    cursor pointer
    width 120px
    height 70px
    strong
      text-transform uppercase
      font-weight 500
      font-size 0.9rem
      line-height 1.1em
      margin-top 5px
    i
      font-size 1.3em
      margin-top 0.2em
    &:hover
      color darken(_text, 10%)
      border-color rgba(#333, 0.1)
    &.tab-item-active
      color _main
      border-color rgba(#333, 0.1)

h1
  color _text
  font-weight 300
h3
  color _main
  font-weight 600
  font-size 0.8rem
  text-transform uppercase

.page
  &.page-fullscreen
    width 100%
    min-height 100%
  &.page-image
    background-size cover
    background-repeat no-repeat
    background-position center
  &.page-light
    background #F2F2F2

#intro
  color #FFF
  background-color _alternative
  position relative
  h1
    color #FFF
  p
    font-weight 400
  .spacer-100
    position relative
  img.arrow
    position absolute
    display block
    max-width 100%
    height auto
    &.a01
      top 40%
      left 0%
    &.a02
      top 20%
      right -10%
    &.a03
      left -10%
      bottom -10%
    &.mobile
      display none
  
  +below('md')
    .spacer-100
      height auto
      img.arrow
        max-width 100%
        height auto
        margin 0 auto
        position relative
        display none
        &.a01,
        &.a02,
        &.a03
          right auto
          left auto
          top auto
        &.mobile
          display block
          
      

header
  font-size 0.8rem
  ul
    &:hover
      li
        a[data-scroll]
          opacity 0.5
          &:hover
            opacity 1
  a
    color #FFF
    text-transform uppercase
    font-weight 600
    transition all 0.2s ease
    span.block
      padding-top 3px

.services-list
  max-height 500px
  overflow-y auto

.hexagon-container
  text-align center
  width 100%
  overflow hidden
  .separator
    margin-top -25px
    +below('md')
      margin-top 0

  .tooltip
    position absolute
    left 100%
    margin-left 30px
    top 50%
    transform translate(0, -50%)
    background rgba(#FFF, 0.9)
    z-index 10
    width 280px
    font-size 0.9rem
    color #555
    box-shadow 0 0 20px rgba(#000, 0.2)
    opacity 0
    transition all 0.3s ease
    pointer-events none

    &:before
      position absolute
      content ''
      top 50%
      margin-top -15px
      left -30px
      width 0
      height 0
      border 15px solid transparent
      border-right-color #FFF

    &.tooltip-left
      right 100%
      left auto
      margin-right 30px
      margin-left 0
      &:before
        right -30px
        left auto
        border-left-color #FFF
        border-right-color transparent

    +below('md')
      opacity 1
      position relative
      margin 0 auto
      top auto
      left auto
      right auto
      transform none
      width auto
      transition none
      &.tooltip-left
        right auto
        margin 0 auto
      &:before,
      &:after
        display none

  .hexagon
    position relative
    width 170px
    height 98.15px
    background-color #cccccc
    margin 49.07px 0
    display inline-block
    transition background 0.3s ease
    &:hover
      .tooltip
        margin-left 20px
        opacity 1
        &.tooltip-left
          margin-right 20px
          margin-left 0
    p
      position absolute
      top 50%
      left 10px
      right 10px
      text-align center
      transform translate(0, -50%)
      color #FFF
      text-transform uppercase
      font-size 0.9rem
      font-weight 600
      margin 0
      line-height 1.2em

    & + .hexagon
      margin-left 40px

    &:before,
    &:after
      content ''
      position absolute
      width 0
      border-left 85px solid transparent
      border-right 85px solid transparent
      left 0

    &:before
      bottom 100%
      border-bottom 49.07px solid #cccccc
      transition border-bottom-color 0.3s ease

    &:after
      top 100%
      width 0
      border-top 49.07px solid #cccccc
      transition border-top-color 0.3s ease

    &:hover
      background-color _main
      &:before
        border-bottom-color @background-color
      &:after
        border-top-color @background-color
        

    +below('md')
      display block
      margin 0 auto 20px auto
      height auto
      width auto
      &:hover
        .tooltip
          margin 0
          &.tooltip-left
            margin 0
      p
        position relative
        top auto
        left auto
        right auto
        transform none
        padding 10px 0
      
      & + .hexagon
        margin 0 auto 20px auto

      &:before,
      &:after
        display none
        
      &:last-child
        margin-bottom 0
      
            
img.client-logo
  border none
  margin 4px
  display block
  width 150px
  height 150px

#contatti
  #map
    width 100%
    height 500px

  .link
    font-weight 600
    text-decoration none

  .list-reset
    text-align right
    li
      margin 0
    .link
      margin 0
      color #666
      font-size 12px
      text-transform uppercase
      &:hover
        color _main
  
  +below('md')
    .container
      margin 0 10px
    
    .sm-col-6
      float left
    .sm-col-2
      float right
      margin-top -78px
      
    .hide
      display none

.text-right
  text-align right